{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2016",
    "declaration": true,
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "noEmitOnError": false,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}